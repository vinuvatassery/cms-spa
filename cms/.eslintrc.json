{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "domain:case-management",
                "onlyDependOnLibsWithTags": [
                  "domain:case-management",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:auth",
                "onlyDependOnLibsWithTags": ["domain:auth", "domain:shared"]
              },
              {
                "sourceTag": "domain:financial-management",
                "onlyDependOnLibsWithTags": [
                  "domain:financial-management",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:productivity-tools",
                "onlyDependOnLibsWithTags": [
                  "domain:productivity-tools",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:dashboard",
                "onlyDependOnLibsWithTags": [
                  "domain:dashboard",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:system-config",
                "onlyDependOnLibsWithTags": [
                  "domain:system-config",
                  "domain:shared"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
