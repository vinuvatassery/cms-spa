{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cms/case-management/domain": [
        "libs/case-management/domain/src/index.ts"
      ],
      "@cms/case-management/feature-client": [
        "libs/case-management/feature-client/src/index.ts"
      ],
      "@cms/case-management/feature-search": [
        "libs/case-management/feature-search/src/index.ts"
      ],
      "@cms/dashboard/domain": ["libs/dashboard/domain/src/index.ts"],
      "@cms/dashboard/feature-widget": [
        "libs/dashboard/feature-widget/src/index.ts"
      ],
      "@cms/dashboard/ui": ["libs/dashboard/ui/src/index.ts"],
      "@cms/financial-management/domain": [
        "libs/financial-management/domain/src/index.ts"
      ],
      "@cms/financial-management/feature-vendor": [
        "libs/financial-management/feature-vendor/src/index.ts"
      ],
      "@cms/productivity-tools/domain": [
        "libs/productivity-tools/domain/src/index.ts"
      ],
      "@cms/productivity-tools/feature-todo": [
        "libs/productivity-tools/feature-todo/src/index.ts"
      ],
      "@cms/shared/auth/domain": ["libs/shared/auth/domain/src/index.ts"],
      "@cms/shared/auth/feature-authentication": [
        "libs/shared/auth/feature-authentication/src/index.ts"
      ],
      "@cms/shared/ui-common": ["libs/shared/ui-common/src/index.ts"],
      "@cms/shared/ui-kendo": ["libs/shared/ui-kendo/src/index.ts"],
      "@cms/shared/util-core": ["libs/shared/util-core/src/index.ts"],
      "@cms/shared/util-oidc": ["libs/shared/util-oidc/src/index.ts"],
      "@cms/shared/util-theme": ["libs/shared/util-theme/src/index.ts"],
      "@cms/system-config/domain": ["libs/system-config/domain/src/index.ts"],
      "@cms/system-config/feature-user-management": [
        "libs/system-config/feature-user-management/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
